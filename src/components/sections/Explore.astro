---
import {meta, about, images} from '@info'
import Section from '@/components/Section.astro'

const sectionTitle = meta.join(" â€¢ ")
---

<Section>

    <div class="explore-section" id="explore-section">

        <h1 class="section-title">{sectionTitle}</h1>
        <p class="section-para">{about}</p>

        <div class="tour-container">
            {
                Object.entries(images).map(([name, urls]) => (
                    <div class="tour-card">
                        <img src={urls[0]} class="house-img" alt="">
                        <div class="photo-body">
                            <h1 class="photo-name">{name}</h1>
                            <p class ="photo-action">View Photo</p>
                        </div>
                    </div>
                ))
            }
        </div>

    </div>

</Section>

<script>


</script>

<style>

    .explore-section {
        position: relative;
        width: 100%;
        padding: 80px 10vw;
        color: #fff;
    }

    .section-title {
        font-size: 30px;
        font-weight: 400;
        text-align: center;
        text-transform: capitalize;
    }

    .section-para {
        width: 50%;
        min-width: 300px;
        display: block;
        margin: 30px auto;
        text-align: center;
    }

    .tour-container {
        position: relative;
        width: 100%;
        height: 600px;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(2, 1fr);
        grid-gap: 20px;
        margin-top: 100px;
    }

    .tour-card {
        width: 100%;
        height: 100%;
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        padding: 10px;
        display: flex;
        align-items: end;
    }

    .tour-card:nth-child(2) {
        grid-row: span 2;
    }

    .tour-card:last-child {
        grid-column: span 2;
    }

    .house-img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: .5s;
        z-index: -1;
    }

    .tour-card:hover .house-img {
        opacity: 0.8;
        transform: scale(1.1);
    }

    .photo-name {
        font-weight: 300;
    }

    .photo-action {
        margin-left: 20px;
        font-size: 14px;
        position: relative;
    }

    .photo-action::before {
        content: '';
        position: absolute;
        left: -20px;
        top: 2px;
        background: url("/public/pin.png");
        width: 15px;
        height: 15px;
        background-size: contain;
    }

</style>