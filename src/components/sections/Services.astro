---
import Section from '@/components/Section.astro'
import {characteristics, offers} from '@info'

---

<Section>

    <div class="services-section" id="services">

        <h1 class="section-title">Why Us ?</h1>
        <p class="section-para">{characteristics['Self check-in']}</p>

        <div class="services-grid">
            {
                Object.entries(offers).map(([type, details])=> (
                    Object.entries(details).map(([service, url]) => (
                        <div class="service-card">
                            <div class="circle"></div>
                            <img class="card-icon" src={url} alt={service}/>
                            <p class="service-text">{service}</p>
                        </div>
                    ))
                ))
            }
        </div>
    </div>

</Section>

<script>


</script>

<style>

    .services-section {
        color: #ffffff;
        padding: 20px 12vw;
    }

    .section-para {
        width: 50%;
        min-width: 300px;
        display: block;
        margin: 30px auto;
        text-align: center;
        opacity: 0.5;
    }

    .section-title {
        font-size: 30px;
        font-weight: 400;
        text-align: center;
        text-transform: capitalize;
    }

    .services-grid {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: 20px;
    }

    .service-card {
        margin-top: 100px;
        width: 100%;
        height: 250px;
        border-radius: 20px;
        border: 1px solid #2d2d2d;
        background: #161813;
        padding: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
        overflow: hidden;
        position: relative;
    }

    .card-icon {
        width: 100px;
        height: 100px;
        text-align: center;
        font-size: 60px;
        z-index: 1;
    }

    .service-text {
        font-size: 20px;
        text-align: center;
        padding: 0 20px;
        z-index: 1;
    }

    .circle {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        transition: .5s;
        background: #ffffff;
        clip-path: circle(0.0% at 100% 100%);
    }

    .service-card:hover .circle {
        clip-path: circle(141.4% at 100% 100%);
        filter: invert(0.7);
    }

</style>